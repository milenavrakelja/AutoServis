<UserControl x:Class="AutoServis.ClientApp.Views.MainMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" 
                Background="{DynamicResource BackgroundBrush}" 
                Padding="20">
            <StackPanel>
                <!-- Naslov menija -->
                <TextBlock Text="{DynamicResource MainMenu_Title}" 
                           FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

                <!-- IZBOR TEME -->
                <TextBlock Text="{DynamicResource MainMenu_TemaLabel}" 
                           Margin="0,0,0,5" FontWeight="SemiBold"/>
                <ComboBox x:Name="ThemeComboBox" 
                          SelectedIndex="0" 
                          SelectionChanged="ThemeComboBox_SelectionChanged"
                          Margin="0,0,0,15">
                    <ComboBoxItem Content="{DynamicResource MainMenu_TemaPlava}" Tag="Blue"/>
                    <ComboBoxItem Content="{DynamicResource MainMenu_TemaZelena}" Tag="Green"/>
                    <ComboBoxItem Content="{DynamicResource MainMenu_TemaCrvena}" Tag="Red"/>
                </ComboBox>

                <!-- Dugmad -->
                <Button x:Name="TipoviBtn" Content="{DynamicResource MainMenu_TipoviUsluge}" 
                        Click="TipoviBtn_Click" Margin="0,5"/>
                <Button x:Name="RezervacijeBtn" Content="{DynamicResource MainMenu_Rezervacije}" 
                        Click="RezervacijeBtn_Click" Margin="0,5"/>
                <Button x:Name="RacuniBtn" Content="{DynamicResource MainMenu_Racuni}" 
                        Click="RacuniBtn_Click" Margin="0,5"/>
                <Button x:Name="LogoutBtn" Content="{DynamicResource MainMenu_Logout}" 
                        Click="LogoutBtn_Click" Margin="0,5"/>
            </StackPanel>
        </Border>

        <Frame x:Name="ContentFrame" Grid.Column="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</UserControl>