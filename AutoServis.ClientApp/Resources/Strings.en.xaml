<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:System="clr-namespace:System;assembly=mscorlib">

    <!-- LoginView -->
    <System:String x:Key="Login_Title">Sign in</System:String>
    <System:String x:Key="Login_UsernameHint">Username</System:String>
    <System:String x:Key="Login_PasswordHint">Password</System:String>
    <System:String x:Key="Login_Button">Sign in</System:String>
    <System:String x:Key="Login_RegisterLink">Don't have an account? Register</System:String>

    <!-- RegisterView -->
    <System:String x:Key="Register_Title">Register</System:String>
    <System:String x:Key="Register_UsernameHint">Username</System:String>
    <System:String x:Key="Register_PasswordHint">Password</System:String>
    <System:String x:Key="Register_ConfirmPasswordHint">Confirm password</System:String>
    <System:String x:Key="Register_ContactHint">Contact (email/phone)</System:String>
    <System:String x:Key="Register_AddressHint">Address</System:String>
    <System:String x:Key="Register_Button">Register</System:String>
    <System:String x:Key="Register_LoginLink">Already have an account? Sign in</System:String>

    <!-- MainMenuView -->
    <System:String x:Key="MainMenu_Title">Menu</System:String>
    <System:String x:Key="MainMenu_TipoviUsluge">Service Types</System:String>
    <System:String x:Key="MainMenu_Rezervacije">Reservations</System:String>
    <System:String x:Key="MainMenu_Racuni">Invoices</System:String>
    <System:String x:Key="MainMenu_Logout">Logout</System:String>

    <!-- TipUslugeView -->
    <System:String x:Key="TipUsluge_Title">Service Types</System:String>
    <System:String x:Key="TipUsluge_NazivHeader">Name</System:String>
    <System:String x:Key="TipUsluge_CijenaHeader">Price</System:String>

    <!-- RezervacijeView -->
    <System:String x:Key="Rezervacije_Title">Create Reservation</System:String>
    <System:String x:Key="Rezervacije_ModelLabel">Vehicle model:</System:String>
    <System:String x:Key="Rezervacije_GodinaLabel">Year of manufacture:</System:String>
    <System:String x:Key="Rezervacije_OpisLabel">Problem description:</System:String>
    <System:String x:Key="Rezervacije_DatumLabel">Service date (YYYY-MM-DD):</System:String>
    <System:String x:Key="Rezervacije_KreirajButton">Create reservation</System:String>
    <System:String x:Key="Rezervacije_DatumUslugeHeader">Service date</System:String>
    <System:String x:Key="Rezervacije_StatusHeader">Status</System:String>
    <System:String x:Key="Rezervacije_OpisHeader">Description</System:String>

    <!-- RacuniView -->
    <System:String x:Key="Racuni_Title">Invoice overview</System:String>
    <System:String x:Key="Racuni_PretraziButton">Search by date</System:String>
    <System:String x:Key="Racuni_PrikaziSveButton">Show all</System:String>
    <System:String x:Key="Racuni_BrojRacunaHeader">Invoice number</System:String>
    <System:String x:Key="Racuni_DatumHeader">Date</System:String>
    <System:String x:Key="Racuni_UkupnoHeader">Total</System:String>

    <!-- LoginView -->
    <System:String x:Key="Client_Login_UnesiteKredencijale">Please enter username and password.</System:String>
    <System:String x:Key="Client_Login_PogresnoKredencijale">Incorrect username or password.</System:String>

    <!-- RegisterView -->
    <System:String x:Key="Client_Register_SvaPoljaObavezna">All fields are required.</System:String>
    <System:String x:Key="Client_Register_LozinkeNePoklapaju">Passwords do not match.</System:String>

    <!-- RacuniView -->
    <System:String x:Key="Client_Racuni_NistePrijavljeni">You are not logged in as a client.</System:String>
    <System:String x:Key="Client_Racuni_IzaberiteDatum">Please select a date for search.</System:String>

    <!-- RezervacijeView -->
    <System:String x:Key="Client_Rezervacije_NistePrijavljeni">You are not logged in! Redirecting to login...</System:String>
    <System:String x:Key="Client_Rezervacije_UnesiteModel">Please enter vehicle model.</System:String>
    <System:String x:Key="Client_Rezervacije_ValidnaGodina">Please enter a valid year of manufacture (e.g. 2020).</System:String>
    <System:String x:Key="Client_Rezervacije_UnesiteOpis">Please enter problem description.</System:String>
    <System:String x:Key="Client_Rezervacije_ValidanDatum">Please enter date in YYYY-MM-DD format (e.g. 2025-04-10).</System:String>
    <System:String x:Key="Client_Rezervacije_DatumProšlost">Service date cannot be in the past.</System:String>
    <System:String x:Key="Client_Rezervacije_UspjehKreiranja">Reservation created successfully!</System:String>
    <System:String x:Key="Client_Rezervacije_UspjehTitle">Success</System:String>
    <System:String x:Key="Client_Rezervacije_GreskaKreiranja">Error creating reservation:</System:String>
    <System:String x:Key="Client_Rezervacije_GreskaTitle">Error</System:String>

    <!-- MainMenuView - Theme Selection -->
    <System:String x:Key="MainMenu_TemaLabel">Theme</System:String>
    <System:String x:Key="MainMenu_TemaPlava">Blue</System:String>
    <System:String x:Key="MainMenu_TemaZelena">Green</System:String>
    <System:String x:Key="MainMenu_TemaCrvena">Red</System:String>

</ResourceDictionary>