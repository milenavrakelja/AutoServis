<UserControl x:Class="AutoServis.WorkerApp.Views.RegisterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="40">
        <ScrollViewer>
            <StackPanel HorizontalAlignment="Center" Width="350">
                <!-- Naslov — UKLONJEN FontSize="20" -->
                <TextBlock Text="{DynamicResource Worker_Register_Title}" 
                           FontWeight="Bold" Margin="0,0,0,20"
                           HorizontalAlignment="Center"/>

                <!-- Ime -->
                <TextBlock Text="{DynamicResource Worker_Register_ImeHint}" 
                           Margin="0,0,0,5" FontWeight="SemiBold"/>
                <TextBox x:Name="ImeBox" Margin="0,0,0,10"/>

                <!-- Prezime -->
                <TextBlock Text="{DynamicResource Worker_Register_PrezimeHint}" 
                           Margin="0,0,0,5" FontWeight="SemiBold"/>
                <TextBox x:Name="PrezimeBox" Margin="0,0,0,10"/>

                <!-- Kontakt -->
                <TextBlock Text="{DynamicResource Worker_Register_KontaktHint}" 
                           Margin="0,0,0,5" FontWeight="SemiBold"/>
                <TextBox x:Name="KontaktBox" Margin="0,0,0,10"/>

                <!-- Korisničko ime -->
                <TextBlock Text="{DynamicResource Worker_Register_UsernameHint}" 
                           Margin="0,0,0,5" FontWeight="SemiBold"/>
                <TextBox x:Name="UsernameBox" Margin="0,0,0,10"/>

                <!-- Lozinka -->
                <TextBlock Text="{DynamicResource Worker_Register_PasswordHint}" 
                           Margin="0,0,0,5" FontWeight="SemiBold"/>
                <PasswordBox x:Name="PasswordBox" Margin="0,0,0,10"/>

                <!-- Potvrda lozinke -->
                <TextBlock Text="{DynamicResource Worker_Register_ConfirmPasswordHint}" 
                           Margin="0,0,0,5" FontWeight="SemiBold"/>
                <PasswordBox x:Name="ConfirmPasswordBox" Margin="0,0,0,20"/>

                <!-- Dugme za registraciju -->
                <Button Content="{DynamicResource Worker_Register_Button}" 
                        Click="RegisterBtn_Click" 
                        Margin="0,0,0,10"/>

                <!-- Link za prijavu -->
                <Button Content="{DynamicResource Worker_Register_LoginLink}" 
                        Click="LoginBtn_Click" 
                        Background="Transparent" BorderBrush="Transparent"
                        HorizontalAlignment="Center" Padding="5">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <TextBlock Text="{TemplateBinding Content}"
                                       TextDecorations="Underline"/>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="{DynamicResource AccentBrush}" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>